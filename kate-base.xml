<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <status>devel</status>
    <author>BARANGER Emmanuel</author>

    <fuel-fraction>1.0</fuel-fraction>

    <sound>
      <audible>true</audible>
      <path>Aircraft/Nakajima-B5N/Sounds/kate-sound.xml</path>
    </sound>

    <model>
      <path>Aircraft/Nakajima-B5N/Models/kate.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <submodels> 
      <serviceable type="bool">true</serviceable>
      <path>Aircraft/Nakajima-B5N/Models/Effects/submodels.xml</path>
    </submodels>

    <startup>
      <splash-texture>Aircraft/Nakajima-B5N/kate-splash.png</splash-texture>
    </startup>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
        <float n="2" alias="/instrumentation/doors/wings/position-norm"/>
      </generic>
    </multiplay>

    <help>
      <title>Nakajima B5N kate</title>
      <key>
        <name>d</name>
        <desc>Open/Close pilot canopy</desc>
      </key>
      <key>
        <name>D</name>
        <desc>Open/Close copilot canopy</desc>
      </key>
      <key>
        <name>Ctrl+d</name>
        <desc>Open/Close gunner canopy</desc>
      </key>
      <key>
        <name>E</name>
        <desc>Open/Close wings</desc>
      </key>
      <key>
        <name>o/O</name>
        <desc>Hook up/down</desc>
      </key>
    </help>

    <menubar include="Dialogs/kate-menu.xml"/>

  </sim>

  <surface-positions>
    <wing-fold-pos-norm alias="/instrumentation/doors/wings/position-norm" />
  </surface-positions>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <running>true</running>
    </engine>
  </engines>
<!--
  <consumables>
    <fuel>
      <tank n="0">
        <tank-num type="int">0</tank-num>
        <level-gal_us archive="y">2070</level-gal_us>
      </tank>
    </fuel>
  </consumables>
-->
  <input>
    <keyboard include="Nasal/kate-keyboard.xml"/>
  </input>

  <nasal>
    <kate>
      <file>Aircraft/Nakajima-B5N/Nasal/liveries.nas</file>
      <file>Aircraft/Nakajima-B5N/Nasal/light.nas</file>
    </kate>
    <doors>
      <file>Aircraft/Nakajima-B5N/Nasal/doors.nas</file>
    </doors>
    <guns>
      <file>Aircraft/Nakajima-B5N/Nasal/weapons.nas</file>
      <file>Aircraft/Nakajima-B5N/Nasal/revi.nas</file>
    </guns>
  </nasal>

</PropertyList>

